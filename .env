# Redis RDI CTF Environment Configuration
# Copy this file to .env and update the values as needed

# PostgreSQL Configuration
POSTGRES_USER=rdi_user
POSTGRES_PASSWORD=rdi_password
POSTGRES_DB=rdi_db

# Redis Configuration (optional - Redis runs without auth by default in this setup)
# REDIS_PASSWORD=your_redis_password

# Kafka Configuration (optional - using defaults)
# KAFKA_BROKER_ID=1
# KAFKA_AUTO_CREATE_TOPICS_ENABLE=true

# RDI Configuration (for future use)
# RDI_HOST=localhost
# RDI_PORT=8080

# Development/Debug Settings
DEBUG=false
LOG_LEVEL=info

# CTF Specific Settings
CTF_MODE=enabled
FLAG_INJECTION_ENABLED=true

# Network Settings (usually don't need to change these)
REDIS_PORT=6379
POSTGRES_PORT=5432
REDISINSIGHT_PORT=8001

